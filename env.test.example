# EchoPilot Test Environment Configuration
# Copy this file to .env.test and fill in your actual values

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================

# Supabase Project URL (required)
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co

# Supabase Anonymous Key (required)
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Supabase Service Role Key (required for admin operations)
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Application URL (required)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# =============================================================================
# EXTERNAL API KEYS (Optional for testing)
# =============================================================================

# Google Places API Key (for business search and reviews)
GOOGLE_PLACES_API_KEY=AIzaYourGooglePlacesAPIKeyHere

# Yelp API Key (for business search and reviews)
YELP_API_KEY=YourYelpAPIKeyHere

# OpenAI API Key (for sentiment analysis)
OPENAI_API_KEY=sk-YourOpenAIAPIKeyHere

# Google Cloud API Key (alternative for sentiment analysis)
GOOGLE_CLOUD_API_KEY=AIzaYourGoogleCloudAPIKeyHere

# =============================================================================
# EMAIL CONFIGURATION (Optional for testing)
# =============================================================================

# SMTP Host
SMTP_HOST=smtp.gmail.com

# SMTP Port
SMTP_PORT=587

# SMTP Username
SMTP_USER=your_smtp_username@gmail.com

# SMTP Password
SMTP_PASS=your_smtp_password_here

# From Email Address
FROM_EMAIL=noreply@echopilot.test

# =============================================================================
# FEATURE FLAGS (Optional)
# =============================================================================

# Enable Analytics
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# Enable Sentiment Analysis
NEXT_PUBLIC_ENABLE_SENTIMENT_ANALYSIS=true

# Enable Real-time Notifications
NEXT_PUBLIC_ENABLE_REAL_TIME_NOTIFICATIONS=true

# =============================================================================
# ANALYTICS CONFIGURATION (Optional)
# =============================================================================

# Google Analytics ID
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Mixpanel Token
NEXT_PUBLIC_MIXPANEL_TOKEN=your_mixpanel_token_here

# =============================================================================
# TEST-SPECIFIC CONFIGURATION
# =============================================================================

# Test Database URL (if using separate test database)
TEST_DATABASE_URL=postgresql://test_user:test_password@localhost:5432/echopilot_test

# Test Email Domain (for filtering test emails)
TEST_EMAIL_DOMAIN=echopilot.test

# Test API Rate Limits (requests per minute)
TEST_GOOGLE_API_RATE_LIMIT=100
TEST_YELP_API_RATE_LIMIT=500
TEST_OPENAI_API_RATE_LIMIT=60

# Test Timeouts (in milliseconds)
TEST_DATABASE_TIMEOUT=5000
TEST_API_TIMEOUT=10000
TEST_EMAIL_TIMEOUT=5000

# =============================================================================
# PERFORMANCE TESTING CONFIGURATION
# =============================================================================

# Performance Test Data Size
PERF_TEST_BUSINESSES=10
PERF_TEST_REVIEWS_PER_BUSINESS=100
PERF_TEST_CONCURRENT_USERS=50

# Performance Thresholds (in milliseconds)
PERF_DATABASE_QUERY_THRESHOLD=1000
PERF_API_RESPONSE_THRESHOLD=2000
PERF_EMAIL_DELIVERY_THRESHOLD=10000

# =============================================================================
# SECURITY TESTING CONFIGURATION
# =============================================================================

# Test Security Keys (for security testing)
TEST_INVALID_API_KEY=invalid_key_for_testing
TEST_EXPIRED_API_KEY=expired_key_for_testing
TEST_REVOKED_API_KEY=revoked_key_for_testing

# Test Malicious Inputs
TEST_SQL_INJECTION_PAYLOAD="'; DROP TABLE users; --"
TEST_XSS_PAYLOAD="<script>alert('XSS')</script>"
TEST_CSRF_PAYLOAD="malicious_csrf_token"

# =============================================================================
# DEBUGGING AND LOGGING
# =============================================================================

# Enable Debug Logging
DEBUG=echopilot:*

# Test Log Level
TEST_LOG_LEVEL=info

# Enable Test Data Logging
TEST_LOG_DATA=false

# =============================================================================
# CI/CD CONFIGURATION
# =============================================================================

# CI Environment Flag
CI=false

# Test Report Directory
TEST_REPORT_DIR=./test-reports

# Coverage Report Directory
COVERAGE_REPORT_DIR=./coverage

# =============================================================================
# NOTES FOR TESTING
# =============================================================================

# 1. Replace all placeholder values with actual test credentials
# 2. Use separate test API keys to avoid affecting production quotas
# 3. Ensure test database is isolated from production data
# 4. Set appropriate rate limits for external APIs
# 5. Configure test email addresses to avoid spam
# 6. Use realistic but safe test data
# 7. Monitor API usage during testing
# 8. Clean up test data after test runs

# =============================================================================
# SECURITY NOTES
# =============================================================================

# ⚠️  IMPORTANT SECURITY CONSIDERATIONS:
# 
# 1. Never commit real API keys to version control
# 2. Use environment-specific API keys
# 3. Rotate test API keys regularly
# 4. Monitor API usage for unusual activity
# 5. Use test-specific email addresses
# 6. Isolate test data from production
# 7. Use secure connections for all external services
# 8. Validate all test inputs and outputs 